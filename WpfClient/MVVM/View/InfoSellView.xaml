<UserControl x:Class="WpfClient.MVVM.View.InfoSellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox Stretch="Fill">
        <Grid Background="{StaticResource BackgroundyColor1}" Height="450" Width="800">

            <!-- Título de la pantalla -->
            <Label Content="Ver información de la venta: "
                   Height="60"
                   VerticalAlignment="Top"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="#fffff7"
                   Margin="74,-1,280,0"/>

            <!-- ============================= -->
            <!--         Sección VENTA        -->
            <!-- ============================= -->
            <Label Content="Venta "
                   Foreground="{StaticResource SecondaryColor1}"
                   Height="40"
                   VerticalAlignment="Top"
                   FontSize="25"
                   FontWeight="Bold"
                   Margin="74,57,612,0"/>

            <Label Content="Precio: "
                   Height="40"
                   VerticalAlignment="Top"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#fffff7"
                   Margin="163,57,547,0"/>
            <TextBlock Margin="264,59,354,357"
                       Text="{Binding SellPrice}" 
                       Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
                       Foreground="White"
                       FontSize="20"/>

            <Label Content="Vendedor"
                   Height="40"
                   VerticalAlignment="Top"
                   FontSize="25"
                   FontWeight="Bold"
                   Foreground="{StaticResource SecondaryColor1}"
                   Margin="451,59,216,0"/>
            <TextBlock Margin="589,60,10,318"
                       Text="{Binding Seller}"
                       Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
                       Foreground="White"
                       TextAlignment="Center"
                       FontSize="20"/>

            <Label Content="Fecha: "
                   Height="40"
                   VerticalAlignment="Top"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#fffff7"
                   Margin="566,5,144,0"/>
            <TextBlock Margin="667,7,10,409"
                       Text="{Binding Date}" 
                       Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
                       Foreground="White"
                       FontSize="20"/>

            <Label Content="Notas adicionales: "
                   Height="40"
                   VerticalAlignment="Top"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#fffff7"
                   Margin="77,113,523,0"/>
            <TextBlock Margin="259,115,18,301"
                       Text="{Binding SellNotes}"
                       Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
                       Foreground="White"
                       FontSize="20"/>

            <!-- Línea divisoria entre "Venta" y "Cliente" -->
            <Line X1="70" Y1="150"
                  X2="810" Y2="150"
                  Stroke="White"
                  StrokeThickness="2" Margin="0,8,0,-8" />

            <!-- ============================= -->
            <!--        Sección CLIENTE       -->
            <!-- ============================= -->
            <Label Content="Cliente "
                   Foreground="{StaticResource SecondaryColor1}"
                   Height="40"
                   VerticalAlignment="Top"
                   FontSize="25"
                   FontWeight="Bold"
                   Margin="74,156,607,0"/>

            <Label Content="Nombre: "
                   Height="40"
                   VerticalAlignment="Top"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#fffff7"
                   Margin="74,196,612,0"/>
            <TextBlock Margin="193,198,263,218"
                       Text="{Binding ClientName}"
                       Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
                       Foreground="White"
                       FontSize="20"/>

            <Label Content="Teléfono: "
                   Height="40"
                   VerticalAlignment="Top"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#fffff7"
                   Margin="522,189,181,0"/>
            <TextBlock Margin="621,193,10,223"
                       Text="{Binding ClientPhone}"
                       Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
                       Foreground="White"
                       FontSize="20"/>

            <Label Content="Dirección: "
                   Height="40"
                   VerticalAlignment="Top"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#fffff7"
                   Margin="74,253,618,0"/>
            <TextBlock Margin="199,255,48,161"
                       Text="{Binding ClientAddress}"
                       Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
                       Foreground="White"
                       FontSize="20"/>

            <!-- Línea divisoria entre "Cliente" y "Vehículo" -->
            <Line X1="70" Y1="300"
                  X2="810" Y2="300"
                  Stroke="White"
                  StrokeThickness="2" />

            <!-- ============================= -->
            <!--       Sección VEHÍCULO       -->
            <!-- ============================= -->
            <Label Content="Vehículo "
                   Foreground="{StaticResource SecondaryColor1}"
                   Height="40"
                   VerticalAlignment="Top"
                   FontSize="25"
                   FontWeight="Bold"
                   Margin="74,304,607,0"/>

            <Label Content="VIN: "
                   Height="40"
                   VerticalAlignment="Top"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#fffff7"
                   Margin="228,308,503,0"/>
            <TextBlock Margin="302,311,344,105"
                       Text="{Binding VehicleVIN}"
                       Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
                       Foreground="White"
                       FontSize="20"/>

            <Label Content="Marca: "
                   Height="40"
                   VerticalAlignment="Top"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#fffff7"
                   Margin="472,303,246,0"/>
            <TextBlock Margin="570,308,12,108"
                       Text="{Binding VehicleBrand}"
                       Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
                       Foreground="White"
                       FontSize="20"/>

            <Label Content="Modelo: "
                   Height="40"
                   VerticalAlignment="Top"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#fffff7"
                   Margin="82,352,604,0"/>
            <TextBlock Margin="200,357,428,59"
                       Text="{Binding VehicleModel}" 
                       Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
                       Foreground="White"
                       FontSize="20"/>

            <Label Content="Versión: "
                   Height="40"
                   VerticalAlignment="Top"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#fffff7"
                   Margin="476,345,210,0"/>
            <TextBlock Margin="594,350,34,66"
                       Text="{Binding VehicleVersion}" 
                       Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
                       Foreground="White"
                       FontSize="20"/>

            <!-- Botones de acción -->
            <Button Background="Red"
                    Content="Salir"
                    FontSize="16"
                    FontWeight="Bold"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding NavigateToSearchSellView}"
                    Margin="96,398,610,10" />
            <Button Background="{StaticResource SecondaryColor1}"
                    Content="Editar venta"
                    FontSize="16"
                    FontWeight="Bold"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding EditSellCommand}"
                    Margin="667,398,12,10" />
            <Button Background="DarkRed"
                    Content="Cancelar venta"
                    FontSize="16"
                    FontWeight="Bold"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding DeleteSellCommand}"
                    Margin="511,398,144,10" />
        </Grid>
    </Viewbox>
</UserControl>
