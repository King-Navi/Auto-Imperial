<UserControl x:Class="WpfClient.MVVM.View.InfoVehicleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfClient.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Viewbox Stretch="Fill">
        <Grid Background="{StaticResource BackgroundyColor1}" Height="450" Width="800">
            <Label Content="Ver información del vehículo: " Height="42" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Foreground="#fffff7" Margin="237,10,237,0"></Label>

            <Label Content="Marca: " Height="28" VerticalAlignment="Top" FontSize="15" FontWeight="Bold" Foreground="#fffff7" Margin="98,75,628,0"></Label>
            <TextBlock
            Margin="175,79,447,341"
            Text="{Binding Branch}"
            Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
            Foreground="White"
            FontSize="15"
        />
            <Label Content="Modelo: " Height="29" VerticalAlignment="Top" FontSize="15" FontWeight="Bold" Foreground="#fffff7" Margin="97,112,619,0"></Label>
            <TextBlock
            Margin="180,115,447,305"
            Text="{Binding Model}" 
            Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
            Foreground="White"
            FontSize="15"
        />


            <Label Content="Versión: " Height="27" VerticalAlignment="Top" FontSize="15" FontWeight="Bold" Foreground="#fffff7" Margin="97,147,629,0"></Label>
            <TextBlock
            Margin="174,146,447,275"
            Text="{Binding Version}"
            Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
            Foreground="White"
            FontSize="15"
        />
            <Label Content="Año: " Height="32" VerticalAlignment="Top" FontSize="15" FontWeight="Bold" Foreground="#fffff7" Margin="614,181,137,0" ></Label>
            <TextBlock
            Margin="667,187,48,232"
            Text="{Binding Year}"
            Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
            Foreground="White"
            FontSize="15"
        />

            <Label Content="Color: " Height="28" VerticalAlignment="Top" FontSize="15" FontWeight="Bold" Foreground="#fffff7" Margin="97,185,646,0"></Label>
            <TextBlock
    Margin="159,188,447,232"
    Text="{Binding Color}"
    Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
    Foreground="White"
    FontSize="15"
/>
            <Label Content="Precio de compra: " Height="29" VerticalAlignment="Top" FontSize="15" FontWeight="Bold" Foreground="#fffff7" Margin="371,219,284,0"></Label>
            <TextBlock
    Margin="513,221,182,199"
    Text="{Binding PurchasePrice}" 
    Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
    Foreground="White"
    FontSize="15"
/>


            <Label Content="Precio de venta: " Height="27" VerticalAlignment="Top" FontSize="15" FontWeight="Bold" Foreground="#fffff7" Margin="374,253,298,0"></Label>
            <TextBlock
    Margin="502,257,182,164"
    Text="{Binding SellPrice}"
    Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
    Foreground="White"
    FontSize="15"
/>
            <Label Content="Tipo: " Height="32" VerticalAlignment="Top" FontSize="15" FontWeight="Bold" Foreground="#fffff7" Margin="374,285,380,0" ></Label>
            <TextBlock
    Margin="425,290,264,129"
    Text="{Binding Type}"
    Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
    Foreground="White"
    FontSize="15"
/>

            <Label Content="Puertas: " Height="32" VerticalAlignment="Top" FontSize="15" FontWeight="Bold" Foreground="#fffff7" Margin="618,285,107,0" ></Label>
            <TextBlock
    Margin="695,290,27,129"
    Text="{Binding Doors}"
    Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
    Foreground="White"
    FontSize="15"
/>

            <Label Content="Número de chasis: " Height="28" VerticalAlignment="Top" FontSize="15" FontWeight="Bold" Foreground="#fffff7" Margin="367,76,280,0"></Label>
            <TextBlock
    Margin="521,80,30,340"
    Text="{Binding ChassisNumber}"
    Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
    Foreground="White"
    FontSize="15"
/>
            <Label Content="Numero de motor: " Height="30" VerticalAlignment="Top" FontSize="15" FontWeight="Bold" Foreground="#fffff7" Margin="367,110,291,0"></Label>
            <TextBlock
    Margin="524,115,30,305"
    Text="{Binding EngineNumber}" 
    Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
    Foreground="White"
    FontSize="15"
/>


            <Label Content="VIN: " Height="26" VerticalAlignment="Top" FontSize="15" FontWeight="Bold" Foreground="#fffff7" Margin="371,145,380,0"></Label>
            <TextBlock
    Margin="424,149,30,272"
    Text="{Binding VIN}"
    Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
    Foreground="White"
    FontSize="15"
/>
            <Label Content="Descuento: " Height="32" VerticalAlignment="Top" FontSize="15" FontWeight="Bold" Foreground="#fffff7" Margin="371,183,338,0" ></Label>
            <TextBlock
    Margin="465,186,196,233"
    Text="{Binding Discount}"
    Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
    Foreground="White"
    FontSize="15"
/>

            <Label Content="Motor: " Height="28" VerticalAlignment="Top" FontSize="15" FontWeight="Bold" Foreground="#fffff7" Margin="374,316,362,0"></Label>
            <TextBlock
    Margin="438,320,30,100"
    Text="{Binding Engine}"
    Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
    Foreground="White"
    FontSize="15"
/>

            <Label Content="Transmisión: " Height="28" VerticalAlignment="Top" FontSize="15" FontWeight="Bold" Foreground="#fffff7" Margin="97,218,599,0"></Label>
            <TextBlock
    Margin="207,222,447,198"
    Text="{Binding Transmission}"
    Style="{StaticResource ResourceKey=PrimaryTextBlockStyle}"
    Foreground="White"
    FontSize="15"
/>

            <Label Content="Foto: " Height="28" VerticalAlignment="Top" FontSize="15" FontWeight="Bold" Foreground="#fffff7" Margin="97,266,638,0"></Label>



            <Button Background="Red" Content="Salir" FontSize="16" FontWeight="Bold" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding NavigateToSearchVehicleView}" Margin="101,383,605,25" />
            <Button Background="{StaticResource SecondaryColor1}" Content="Editar vehículo" FontSize="16" FontWeight="Bold" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding EditVehicleCommand}" Margin="606,383,25,25" />
            <Button Background="DarkRed" Content="Eliminar vehículo" FontSize="16" FontWeight="Bold" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding DeleteVehicleeCommand}" Margin="413,382,217,26" />
        </Grid>
    </Viewbox>
</UserControl>
