<Window x:Class="WpfClient.MVVM.View.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient.MVVM.View"
        mc:Ignorable="d"
        Title="InputDialog" Height="200" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Porfavor ingresa el CURP del cliente:" Margin="0,0,0,10"/>
        <TextBox x:Name="InputBox" Height="30"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Foreground="White" Background="{StaticResource LightGreenColor}" Width="75" Height="40" FontSize="20" Content="OK"   Margin="5,0,0,0" Click="Ok_Click"/>
            <Button Foreground="White" Background="Red" Content="Cancel" Width="75" Height="40" FontSize="20"  Margin="5,0,0,0" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
