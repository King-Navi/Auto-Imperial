<UserControl x:Class="WpfClient.MVVM.View.SearchClientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfClient.MVVM.View" 
             xmlns:viewmodel="clr-namespace:WpfClient.MVVM.ViewModel"
             xmlns:custom="clr-namespace:WpfClient.Resources.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1445" >
    <Grid Background="{StaticResource BackgroundyColor2}" Margin="180,0,0,0">
        <custom:SimplePlaceHolderTextBox Text="{Binding SearchText , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" HorizontalAlignment="Left" Margin="114,20,0,0" Height="50" Width="477" VerticalAlignment="Top" FontSize="30" Placeholder="Buscar por nombre o CURP o RFC"/>
        <Button Command="{Binding SearchCommand}" Content="Buscar" HorizontalAlignment="Left" Margin="632,29,0,0" VerticalAlignment="Top" Height="32" Width="90"/>
        <Label Content="Buscar" HorizontalAlignment="Left" Margin="25,38,0,0" VerticalAlignment="Top" Width="67"/>
        <Button Content="Registrar cliente" HorizontalAlignment="Left" Margin="748,24,0,0" VerticalAlignment="Top" Height="32" Width="90" Command="{Binding NavegateToRegisterClientViewCommand}"/>
        
        <Button Content="Elimianr cliente" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="32" Width="90" Command="{Binding DeleteClientCommand}" Margin="1104,735,0,0"/>
        <Button Content="Editar cliente" HorizontalAlignment="Left" Margin="904,735,0,0" VerticalAlignment="Top" Height="32" Width="90" Command="{Binding EditClientCommand}"/>
        
        <Grid Background="Aqua" Width="600" Height="300" VerticalAlignment="Center" HorizontalAlignment="Center">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox ItemsSource="{Binding ClientsList}" 
                         SelectedItem="{Binding Selected, Mode=TwoWay}" >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <local:ClientCardView />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
